# ============================================================================
# FactoryFlow Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in the values for your environment.
# NEVER commit .env.local to version control!
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================
# Base URL for the backend API (required for production)
VITE_API_BASE_URL=https://your-api-domain.com/api/v1

# ============================================================================
# Firebase Configuration (Push Notifications)
# ============================================================================
# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Cloud Messaging VAPID Key (for push notifications)
# Get this from Firebase Console > Project Settings > Cloud Messaging > Web configuration
VITE_FIREBASE_VAPID_KEY=your-vapid-key

# Firebase private key (if needed for server-side operations)
VITE_FIREBASE_PRIVATE_KEY=your-private-key

# Firebase Measurement ID (for Google Analytics)
VITE_FIREBASE_MEASURING_ID=G-XXXXXXXXXX

# ============================================================================
# Application Configuration
# ============================================================================
# Default SAP Branch ID for GRPO operations
VITE_DEFAULT_BRANCH_ID=2

# Enable/disable features
VITE_ENABLE_GATE_IN=true
VITE_ENABLE_QUALITY_CHECK=true
VITE_ENABLE_REPORTS=false

# ============================================================================
# Development Configuration
# ============================================================================
# Enable debug mode (shows additional console logs)
VITE_DEBUG=false
